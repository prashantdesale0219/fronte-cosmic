  "item": [
    {
      "name": "Get Orders Report",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "description": "Admin JWT token"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/reports/orders?startDate=2023-01-01&endDate=2023-12-31",
          "host": ["{{baseUrl}}"],
          "path": ["api", "reports", "orders"],
          "query": [
            {
              "key": "startDate",
              "value": "2023-01-01"
            },
            {
              "key": "endDate",
              "value": "2023-12-31"
            }
          ]
        },
        "description": "Get orders report for a specific date range (admin only)"
      }
    },
