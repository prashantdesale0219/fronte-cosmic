    "name": "Cosmic Product Management API",
    "description": "API collection for testing product management endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get All Products",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/products",
          "host": ["{{baseUrl}}"],
          "path": ["api", "products"]
        },
        "description": "Get all products with optional filtering"
      },
      "response": []
    },
    {
      "name": "Get Product By ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/products/{{productId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "products", "{{productId}}"]
        },
        "description": "Get a single product by ID or slug"
      },
      "response": []
    },
    {
      "name": "Get Product Details",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/products/{{productId}}/details",
          "host": ["{{baseUrl}}"],
          "path": ["api", "products", "{{productId}}", "details"]
        },
        "description": "Get complete product details with reviews, related products, and rating distribution"
      },
      "response": []
    },
    {
      "name": "Get Related Products",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/products/{{productId}}/related",
          "host": ["{{baseUrl}}"],
          "path": ["api", "products", "{{productId}}", "related"]
        },
        "description": "Get products related to a specific product"
      },
      "response": []
    },
    {
      "name": "Get Product Rating Summary",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/products/{{productId}}/rating-summary",
          "host": ["{{baseUrl}}"],
          "path": ["api", "products", "{{productId}}", "rating-summary"]
        },
        "description": "Get rating distribution for a product"
      },
      "response": []
    },
    {
      "name": "Get Products By Tag",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/products/tags/{{tag}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "products", "tags", "{{tag}}"]
        },
        "description": "Get products by tag"
      },
      "response": []
    },
    {
      "name": "Get Product Applications",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/products/applications",
          "host": ["{{baseUrl}}"],
          "path": ["api", "products", "applications"]
        },
        "description": "Get all unique product applications/tags"
      },
      "response": []
    },
