{
  "info": {
    "name": "Cosmic Coupon API",
    "description": "Collection for Coupon Management API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Validate Coupon (Public)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"code\": \"SUMMER2023\",\n  \"cartTotal\": 1000\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/coupons/validate",
          "host": ["{{baseUrl}}"],
          "path": ["api", "coupons", "validate"]
        },
        "description": "Validate a coupon code (public route)"
      }
    },
    {
      "name": "Get All Coupons (Admin)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "description": "Admin JWT token"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/coupons?page=1&limit=10&status=active",
          "host": ["{{baseUrl}}"],
          "path": ["api", "coupons"],
          "query": [
            {
              "key": "page",
              "value": "1"
            },
            {
              "key": "limit",
              "value": "10"
            },
            {
              "key": "status",
              "value": "active"
            }
          ]
        },
        "description": "Get all coupons with pagination and filters (admin only)"
      }
    },
    {
      "name": "Create Coupon (Admin)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "description": "Admin JWT token"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"code\": \"SUMMER2023\",\n  \"type\": \"percentage\",\n  \"value\": 15,\n  \"minPurchase\": 500,\n  \"maxDiscount\": 2000,\n  \"startDate\": \"2023-06-01\",\n  \"endDate\": \"2023-08-31\",\n  \"isActive\": true,\n  \"applicableProducts\": [],\n  \"applicableCategories\": [],\n  \"usageLimit\": 1000,\n  \"perUserLimit\": 1\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/coupons",
          "host": ["{{baseUrl}}"],
          "path": ["api", "coupons"]
        },
        "description": "Create a new coupon (admin only)"
      }
    },
    {
      "name": "Get Coupon by ID (Admin)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "description": "Admin JWT token"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/coupons/{{couponId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "coupons", "{{couponId}}"]
        },
        "description": "Get a specific coupon by ID (admin only)"
      }
    },
    {
      "name": "Update Coupon (Admin)",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "description": "Admin JWT token"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"value\": 20,\n  \"maxDiscount\": 2500,\n  \"endDate\": \"2023-09-30\",\n  \"isActive\": true\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/coupons/{{couponId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "coupons", "{{couponId}}"]
        },
        "description": "Update an existing coupon (admin only)"
      }
    },
    {
      "name": "Delete Coupon (Admin)",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "description": "Admin JWT token"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/coupons/{{couponId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "coupons", "{{couponId}}"]
        },
        "description": "Delete a coupon (admin only)"
      }
    },
    {
      "name": "Apply Coupon (Admin)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "description": "Admin JWT token"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"code\": \"SUMMER2023\",\n  \"userId\": \"{{userId}}\",\n  \"orderId\": \"{{orderId}}\",\n  \"cartTotal\": 1500\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/coupons/apply",
          "host": ["{{baseUrl}}"],
          "path": ["api", "coupons", "apply"]
        },
        "description": "Apply a coupon to an order (admin only)"
      }
    },
    {
      "name": "Get Coupon Stats (Admin)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "description": "Admin JWT token"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/coupons/stats",
          "host": ["{{baseUrl}}"],
          "path": ["api", "coupons", "stats"]
        },
        "description": "Get coupon usage statistics (admin only)"
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "your-admin-jwt-token",
      "type": "string"
    },
    {
      "key": "couponId",
      "value": "coupon-id-here",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "user-id-here",
      "type": "string"
    },
    {
      "key": "orderId",
      "value": "order-id-here",
      "type": "string"
    }
  ]
}